@model FoodTrace.Model.ProductTypeModel
@{
    ViewBag.Title = "Edit";
    Layout = null;
}

<h2>产品类型编辑</h2>
@using (Html.BeginForm("Edit", "ProductType", FormMethod.Post))
{
    @Html.HiddenFor(m => m.ProductTypeID)
