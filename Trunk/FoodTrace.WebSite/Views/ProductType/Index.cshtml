@model List<FoodTrace.Model.ProductTypeModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
               <div style="height: 95%">
                   <table id="DataGrid" style="height: 100%"></table>
               </div>

<div id="CreateDialog" style="display: none;"></div>
<div id="EditDialog" style="display: none;"></div>
<script>

    function Edit(id) {
        $('#EditDialog').dialog('refresh', '@Url.Action("Edit", "ProductType")' + '?id=' + id).dialog('open');
    }

    function Delete(id) {

        $.messager.confirm('信息提示', '确定要删除该记录吗', function (r) {
            if (r) {
                $.post('@Url.Action("DeleteByIds", "ProductType")', { ids: id.join() }, function (json) {
                    var msg = '';
                    if (json.flag) {
                        msg = "删除成功";
                        $('#DataGrid').datagrid('reload');
                    } else {
                        msg = "删除失败";
                    }
                    $.messager.alert('信息提示', msg, 'info', function () {
                    });
                }, 'json');
            }
        });

    }

    $(function () {

        $('#DataGrid').datagrid({
            url: '@Url.Action("GetList", "ProductType")',
            rownumbers: true,
            striped: true,
            fitColumns: true,
            pagination: true,
            singleSelect: false,
            pageList: [10, 15, 20, 25],
            toolbar: [{
                id: 'btnAdd',
                text: ' 新建',
                iconCls: 'icon-add',
                handler: function () {
                    $('#CreateDialog').dialog('refresh', '@Url.Action("Create", "ProductType")').dialog('open');
                }
            }, {
                id: 'btnEdit',
                text: ' 编辑',
                iconCls: 'icon-edit',
                handler: function () {
                    var row = $('#DataGrid').datagrid('getSelections');
                    if (row) {
                        if (row.length == 1) {
                            Edit(row[0].ProductTypeID);
                        } else {
                            $.messager.alert('提示', '只能选中一条数据行进行修改');
                        }
                    }
                }
            }, {
                id: 'btnDelete',
                text: ' 删除',
                iconCls: 'icon-remove',
                handler: function () {
                    var row = $('#DataGrid').datagrid('getSelections');
                    var ids = [];
                    if (row.length==0) {
                        $.messager.alert('提示', '请选择需要删除的数据');
                        return;
                    }
                    $.each(row, function (index, item) {
                        ids.push(item.ProductTypeID);
                    });

                    Delete(ids);
                }
            }],
            columns: [[
                    { field: 'ck', checkbox: true },
                    { title: '产品型号名称', align: 'center', field: 'ProductTypeEN', width: 35 },
                    { title: '备注', align: 'center', field: 'Remark', width: 35 }

            ]]
        });


        $('#CreateDialog').dialog({
            title: 'Create Dialog',
            width: 600,
            height: 500,
            closed: true,
            cache: false,
            href: '@Url.Action("Create", "ProductType")',
            modal: true,
            buttons: [{
                text: 'Save',
                iconCls: 'icon-ok',
                handler: function () {
                    debugger;
                    var $form = $('#CreateDialog').find('form');

                    var flag = $form.form('validate');

                    if (!flag) {
                        $.messager.alert('Title', '必须填写完整的信息', 'error');
                        return false;
                    }

                    $.messager.progress();
                    var url = $form.prop('action');
                    $.post(url, $form.serializeArray(), function (json) {

                        var msg = '';
                        if (json.flag) {
                            msg = "保存成功";
                            $('#DataGrid').datagrid('reload');
                        } else {
                            msg = "保存失败<br />" + json.msg;
                        }
                        $.messager.progress('close');
                        $.messager.alert('信息提示', msg, 'info', function () {
                            $('#CreateDialog').dialog('close');
                        });
                    }, 'json');
                }
            }, {
                text: 'Close',
                iconCls: 'icon-cancel',
                handler: function () {
                    $('#CreateDialog').dialog('close');
                }
            }]
        });

        $('#EditDialog').dialog({
            title: 'Create Dialog',
            width: 600,
            height: 500,
            closed: true,
            cache: false,
            href: '@Url.Action("Edit", "ProductType")',
            modal: true,
            buttons: [{
                text: 'Save',
                iconCls: 'icon-ok',
                handler: function () {
                    var $form = $('#EditDialog').find('form');

                    var flag = $form.form('validate');

                    if (!flag) {
                        $.messager.alert('Title', '必须填写完整的信息', 'error');
                        return false;
                    }

                    $.messager.progress();
                    var url = $form.prop('action');
                    $.post(url, $form.serializeArray(), function (json) {

                        var msg = '';
                        if (json.flag) {
                            msg = "保存成功";
                            $('#DataGrid').datagrid('reload');
                        } else {
                            msg = "保存失败<br />" + json.msg;
                        }
                        $.messager.progress('close');
                        $.messager.alert('信息提示', msg, 'info', function () {
                            $('#EditDialog').dialog('close');
                        });
                    }, 'json');
                }
            }, {
                text: 'Close',
                iconCls: 'icon-cancel',
                handler: function () {
                    $('#EditDialog').dialog('close');
                }
            }]
        });
    });
</script>

