
@model List<FoodTrace.Model.CityModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <table id="DataGrid" style="height:100%;"></table>
<div id="CreateDialog"></div>
<div id="EditDialog"></div>

<script type="text/javascript">
    $(function () {
        $('#DataGrid').datagrid({
            url: '@Url.Action("GetList", "City")',
            rownumbers: true,
            striped: true,
            fitColumns: true,
            pagination: true,
            singleSelect: false,
            pageList: [10, 15, 20, 25],
            toolbar: [{
                id: 'btnAdd',
                text: ' 新建',
                iconCls: 'icon-add',
                handler: function () {
                    $('#CreateDialog').dialog('refresh', '@Url.Action("Create", "City")').dialog('open');
                }
            }, {
                id: 'btnEdit',
                text: ' 编辑',
                iconCls: 'icon-edit',
                handler: function () {
                    var row = $('#DataGrid').datagrid('getSelections');
                    if (row) {
                        if (row.length == 1) {
                            Edit(row[0].CityID);
                        } else {
                            $.messager.alert('提示', '只能选中一条数据行进行修改');
                        }
                    }
                   
                }
            }, {
                id: 'btnDelete',
                text: ' 删除',
                iconCls: 'icon-remove',
                handler: function () {

                    var row = $('#DataGrid').datagrid('getSelections');
                    var ids = [];
                    if (row) {
                        $.each(row, function (index, item) {
                            ids.push(item.CityID);
                        });

                        Delete(ids);
                    }
                }
            }],
            columns: [[
                  { field: 'ck', checkbox: true },
                    { title: '省份名称', align: 'center', field: 'ProvinceName', width: 35 },
                    { title: '城市编码', align: 'center', field: 'CityCode', width: 35 },
                    { title: '城市名称', align: 'center', field: 'CityName', width: 35 },
                    { title: '城市区号', align: 'center', field: 'CityAreaCode', width: 35 }
            ]]
        });

        $('#CreateDialog').dialog({
            title: 'Create Dialog',
            width: 400,
            height: 280,
            closed: true,
            cache: false,
            href: '@Url.Action("Create", "City")',
            modal: true,
            buttons: [{
                text: 'Save',
                iconCls: 'icon-ok',
                handler: function () {
                    var $form = $('#CreateDialog').find('form');

                    var flag = $form.form('validate');

                    if (!flag) {
                        $.messager.alert('Title', '必须填写完整的信息', 'error');
                        return false;
                    }

                    $.messager.progress();
                    var url = $form.prop('action');
                    $.post(url, $form.serializeArray(), function (json) {

                        var msg = '';
                        if (json.flag) {
                            msg = "保存成功";
                            $('#DataGrid').datagrid('reload');
                        } else {
                            msg = "保存失败<br />" + json.msg;
                        }
                        $.messager.progress('close');
                        $.messager.alert('信息提示', msg, 'info', function () {
                            $('#CreateDialog').dialog('close');
                        });
                    }, 'json');
                }
            }, {
                text: 'Close',
                iconCls: 'icon-cancel',
                handler: function () {
                    $('#CreateDialog').dialog('close');
                }
            }]
        });

        $('#EditDialog').dialog({
            title: 'Create Dialog',
            width: 400,
            height: 280,
            closed: true,
            cache: false,
            href: '@Url.Action("Edit", "City")',
            modal: true,
            buttons: [{
                text: 'Save',
                iconCls: 'icon-ok',
                handler: function () {
                    var $form = $('#EditDialog').find('form');

                    var flag = $form.form('validate');

                    if (!flag) {
                        $.messager.alert('Title', '必须填写完整的信息', 'error');
                        return false;
                    }

                    $.messager.progress();
                    var url = $form.prop('action');
                    $.post(url, $form.serializeArray(), function (json) {

                        var msg = '';
                        if (json.flag) {
                            msg = "保存成功";
                            $('#DataGrid').datagrid('reload');
                        } else {
                            msg = "保存失败<br />" + json.msg;
                        }
                        $.messager.progress('close');
                        $.messager.alert('信息提示', msg, 'info', function () {
                            $('#EditDialog').dialog('close');
                        });
                    }, 'json');
                }
            }, {
                text: 'Close',
                iconCls: 'icon-cancel',
                handler: function () {
                    $('#EditDialog').dialog('close');
                }
            }]
        });
    });

    function Edit(id) {
        $('#EditDialog').dialog('refresh', '@Url.Action("Edit", "City")' + '?id=' + id).dialog('open');
    }

    function Delete(id) {
        $.messager.confirm('信息提示', '确定要删除该记录吗', function (r) {
            if (r) {
                $.post('@Url.Action("DeleteByIds", "City")', { id: id.join() }, function (json) {
                    var msg = '';
                    if (json.flag) {
                        msg = "删除成功";
                        $('#DataGrid').datagrid('reload');
                    } else {
                        msg = "删除失败";
                    }
                    $.messager.alert('信息提示', msg, 'info', function () {
                    });
                }, 'json');
            }
        });
    }
</script>